<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="45dp"/>
            <gradient android:startColor="#FF69D2E7"
                      android:endColor="#FFFA6900"
                      android:type="linear"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="45dp"/>
            <gradient android:startColor="#FFA7DBD8"
                      android:endColor="#FFF38630"
                      android:type="linear"/>
        </shape>
    </item>

</selector>